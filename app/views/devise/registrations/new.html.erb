<section class="section">
  <p class="title is-1 has-text-centered"><%= t('sign_up') %></p>
</section>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
  <label class="label">Name</label>
  <div class="control">
    <%= f.text_field :name, autofocus: true, class:"input", placeholder:"Name" %>
  </div>
</div>
<div class="field">
  <label class="label">Email</label>
  <div class="control has-icons-left has-icons-right">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder:"Email" %>
    <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
  </div>
</div>

<div class="field">
  <label class="label">Password</label>
  <p class="control has-icons-left">
    <%= f.password_field :password, autocomplete: "new-password", class:"input", type:"password", placeholder:"Password" %>
    <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
  </p>
</div>

<div class="field">
  <label class="label">Password Confirmation</label>
  <p class="control has-icons-left">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input", type:"password", placeholder:"Password" %>
    <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
  </p>
</div>
<br>
<div class="container">
  <div class="actions has-text-centered">
    <%= f.submit "Sign up", class:"button is-primary is-fullwidth" %>
  </div>
</div>
<% end %>