      </div>
    </div>

    <div class="navbar-item has-dropdown is-hoverable">
      <a class="navbar-link">
        Account
      </a>

      <div class="navbar-dropdown">
        <%= link_to edit_user_registration_path, class:"navbar-item" do %>
        <%= t('edit_profile') %>
        <% end %>
        <%= link_to destroy_user_session_path, method: :delete, class:"navbar-item" do %>
        <%= t('log_out') %>
        <% end %>
      </div>
    </div>

    <% else %>
    <div class="navbar-item">
      <div class="buttons">
        <%= link_to new_user_registration_path, class: "button is-light" do %>
        <% t('sign_up') %>
        <% end %>
        <%= link_to new_user_session_path, class: "button is-light" do %>
        <% t('log_in') %>
        <% end %>
        <% end %>
      </div>
    </div>
