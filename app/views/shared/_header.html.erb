<nav class="navbar is-primary has-shadow" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <%= link_to root_path, class: 'navbar-item' do %>
    <h1 class="is-size-4 has-text-weight-semibold is-uppercase"> <%= t('app_title') %> &nbsp </h1>
    <img src="https://i.ibb.co/2Zs3P4V/salad.png">
    <% end %>

    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start ">
      <%= link_to recipes_path, class: 'navbar-item' do %>
      <h1 class="has-text-weight-medium"> Recipes </h1>
      <% end %>
    </div>
  </div>

  <% if user_signed_in? %>
  <div class="navbar-end">
    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start ">
        <%= link_to collection_index_path, class: 'navbar-item' do %>
